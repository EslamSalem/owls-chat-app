<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="32dp"
    android:background="@drawable/card_layout"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:elevation="16dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/card_layout"
    >
    <ImageView
        android:id="@+id/friends_list_image_view"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_mood_24"
        android:background="@drawable/round_pic"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        >
    </ImageView>
    <TextView
        android:id="@+id/friends_list_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp Name"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/friends_list_image_view"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginStart="100dp"
        >
    </TextView>
</RelativeLayout>
</androidx.cardview.widget.CardView>
